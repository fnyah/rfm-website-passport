<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Dr. Rose Fine-Meyer - Home</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="../public/assets/images/rfm-favicon.png"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link href="../public/assets/css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand" href="/">Dr. Rose Fine-Meyer</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/projects">Projects</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/for-educators">For Educators</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div>
      <div id="section-1" style="min-height: 100vh; margin-top: 100px">
        <h1 class="mb-4 display-1" id="main-header-text">
          Public History and Education
        </h1>
        <h1 class="display-1" id="mobile-header-text">
          Public <br />
          History <br />
          and <br />
          Education.
        </h1>
        <!-- <h1 class="mb-4 display-1" id="mobile-header">
          Public <br> History <br> and <br> Education
        </h1> -->
        <div
          class="container"
          style="display: flex; align-items: center; justify-content: center"
        >
          <div id="slides-host">
            <% photolinks.forEach(image => { %>
            <!-- ejs switch case to evaulate image -->
            <% if (image.link && image.description) { %>
            <a
              href="<%= image.link %>"
              style="text-decoration: none"
              target="_blank"
            >
              <div class="slide-with-link slide">
                <div class="slide-description"><%= image.description %></div>
                <div
                  class="slide-background"
                  style="
                    background-image: url(http://localhost:3000/image/<%= image.filename %>);
                  "
                ></div>
              </div>
            </a>
            <% } %> <% if (!image.link && !image.description) { %>
            <div class="slide">
              <div
                class="slide-background"
                style="
                  background-image: url(http://localhost:3000/image/<%= image.filename %>);
                "
              ></div>
            </div>
            <% } %> <% if (image.description && !image.link) { %>
            <div class="slide slide-without-link">
              <div class="slide-description"><%= image.description %></div>
              <div
                class="slide-background"
                style="
                  background-image: url(http://localhost:3000/image/<%= image.filename %>);
                "
              ></div>
            </div>
            <% } %> <% if (image.link && !image.description) { %>
            <a
              href="<%= image.link %>"
              style="text-decoration: none"
              target="_blank"
            >
              <div class="slide">
                <div
                  class="slide-background"
                  style="
                    background-image: url(http://localhost:3000/image/<%= image.filename %>);
                  "
                ></div>
              </div>
            </a>
            <% } %> <% }) %>
          </div>
        </div>
        <div
          class="d-flex justify-content-center align-content-center"
          style="margin-top: 2%"
        >
          <button
            type="button"
            class="btn btn-warning"
            id="learn-more-button"
            onclick="window.scrollTo(0, document.getElementById('section-2').offsetTop)"
          >
            Learn More
          </button>
        </div>
      </div>
      <div
        id="section-2"
        style="margin-top: auto; min-height: 100vh; padding-top: 100px"
      >
        <div class="container">
          <div class="text-center mt-5">
            <h1 class="display-1" id="courses-header">
              Courses &amp; Projects
            </h1>
          </div>
          <% posts.forEach(post => { %>
          <div class="mt-5">
            <!-- // center the title and description -->
            <h1 class="text-center home-title"><%= post.title %></h1>
            <p class="home-description"><%= post.description %></p>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
    <a href="/login" style="  text-decoration: inherit;color: inherit;cursor: auto;"><p class="home-login">Login</p></a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
