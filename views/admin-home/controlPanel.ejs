<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8" />
    <title>Admin/home</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link
      href="../public/assets/css/admin.css"
      rel="stylesheet"
      type="text/css"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Admin Control Panel</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/admin/home"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="standings">Standings/About me</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="projects">Student Projects</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Course Materials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="tab">
      <button
        class="tablinks"
        id="OpenDefault"
        onclick="openTab(event, 'Textposts')"
      >
        Home Page Posts
      </button>
      <button class="tablinks" onclick="openTab(event, 'Photos')">
        Photo Posts
      </button>
    </div>
    <div id="Textposts" class="tabcontent">
      <div class="container">
        <h1 class="mb-4">Home Page Content</h1>
        <a href="home/new" class="btn btn-success">Add new post</a>

        <% posts.forEach(post => { %>
        <div class="card mt-4">
          <div class="card-body">
            <h2 class="card-text mb-2"><%= post.title %></h2>
            <div class="card-subtitle text-muted mb-2">
              <%= post.createdAt.toLocaleDateString() %>
            </div>
            <div class="card-text mb-2"><%= post.description %></div>
            <a href="/admin/home/<%= post.id %>" class="btn btn-primary"
              >Read More</a
            >
            <a href="/admin/home/edit/<%= post.id %>" class="btn btn-info"
              >Edit</a
            >
            <form
              action="/admin/home/<%=post.id%>?_method=DELETE"
              method="POST"
              class="d-inline"
            >
              <button
                type="submit"
                class="btn btn-danger"
                id="deleteConfirm"
                onclick="return confirm('Are you sure you want to delete this post?')"
              >
                Delete
              </button>
            </form>
          </div>
        </div>

        <% }) %>
      </div>
    </div>

    <div id="Photos" class="tabcontent">
      <div class="container">
        <h1 class="mb-4">Photo Posts</h1>
        <a href="/admin/home/photos/new" class="btn btn-success"
          >Add new post</a
        >
        <div class="photolink-container">
          <% photolinks.forEach(photo => { %>
          <div class="card mt-4 photolink-card">
            <div class="card-body">
              <h2 class="card-text mb-2"><%= photo.title %></h2>
              <div class="card-subtitle text-muted mb-2">
                <%= photo.createdAt.toLocaleDateString() %>
              </div>
              <img
                src="/admin/home/image/<%= photo.filename %>"
                width="200"
                class="admin-photolink-edit-photo"
              />
              <div class="admin-photolink-card-text">
                <h4>Description:</h4>
                <div class="card-text mb-2"><%= photo.description %></div>
                <h4>Link:</h4>
                <div class="card-text mb-2"><%= photo.link.substring(0,50) %></div>
              </div>

              <div class="admin-photolink-buttons">
                <a
                  href="/admin/home/photos/edit/<%= photo.id %>"
                  class="btn btn-info photolink-buttons"
                  >Edit</a
                >
                <form
                  action="/admin/home/photos/<%=photo.id%>?_method=DELETE"
                  method="POST"
                  class="d-inline"
                >
                  <button
                    type="submit"
                    class="btn btn-danger photolink-buttons"
                    id="deleteConfirm"
                    onclick="return confirm('Are you sure you want to delete this post?')"
                  >
                    Delete
                  </button>
                </form>
              </div>
            </div>
          </div>

          <% }) %>
        </div>
      </div>
    </div>

    <script>
      function openTab(evt, idName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
          tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
          tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(idName).style.display = "block";
        evt.currentTarget.className += " active";
      }

      document.getElementById("OpenDefault").click();
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"
      integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
