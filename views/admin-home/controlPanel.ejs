<!DOCTYPE html>

<html
  data-wf-page="62b121c08171394a83424288"
  data-wf-site="6297e54a7a0fbb44b4a54c60"
>
  <head>
    <meta charset="utf-8" />
    <title>Admin/home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor"
      crossorigin="anonymous"
    />
    <link
      href="../public/assets/css/admin.css"
      rel="stylesheet"
      type="text/css"
    />
  </head>
  <body>
    <div
      data-animation="default"
      data-collapse="medium"
      data-duration="400"
      data-easing="ease"
      data-easing2="ease"
      role="banner"
      class="w-nav"
    >
      <div class="w-container">
        <a href="/admin" class="w-nav-brand">
          <h1 class="heading-6">Admin Panel</h1>
        </a>
        <nav role="navigation" class="w-nav-menu">
          <a href="/admin" class="w-nav-link">Home</a>
          <a href="standings" class="w-nav-link">Standings/About me</a>
          <a href="projects" class="w-nav-link">Student Projects</a>
          <a href="#" class="w-nav-link">Course-materials</a>
          <a href="/logout" class="w-nav-link">LOGOUT</a>
        </nav>
        <div class="w-nav-button">
          <div class="w-icon-nav-menu"></div>
        </div>
      </div>
    </div>
    <div class="tab">
      <button
        class="tablinks"
        id="OpenDefault"
        onclick="openTab(event, 'Textposts')"
      >
        Home Page Posts
      </button>
      <button class="tablinks" onclick="openTab(event, 'Photos')">
        Photo Posts
      </button>
    </div>
    <div id="Textposts" class="tabcontent">
      <div class="container">
        <h1 class="mb-4">Home Page Content</h1>
        <a href="home/new" class="btn btn-success">Add new post</a>

        <% posts.forEach(post => { %>
        <div class="card mt-4">
          <div class="card-body">
            <h2 class="card-text mb-2"><%= post.title %></h2>
            <div class="card-subtitle text-muted mb-2">
              <%= post.createdAt.toLocaleDateString() %>
            </div>
            <div class="card-text mb-2"><%= post.description %></div>
            <a href="/admin/home/<%= post.id %>" class="btn btn-primary"
              >Read More</a
            >
            <a href="/admin/home/edit/<%= post.id %>" class="btn btn-info"
              >Edit</a
            >
            <form
              action="/admin/home/<%=post.id%>?_method=DELETE"
              method="POST"
              class="d-inline"
            >
              <button
                type="submit"
                class="btn btn-danger"
                id="deleteConfirm"
                onclick="return confirm('Are you sure you want to delete this post?')"
              >
                Delete
              </button>
            </form>
          </div>
        </div>

        <% }) %>
      </div>
    </div>

    <div id="Photos" class="tabcontent">
      <div class="container">
        <h1 class="mb-4">Photo Posts</h1>
        <a href="/admin/home/photos/new" class="btn btn-success"
          >Add new post</a
        >
        <% photolinks.forEach(photo => { %>
        <div class="card mt-4">
          <div class="card-body">
            <h2 class="card-text mb-2"><%= photo.title %></h2>
            <div class="card-subtitle text-muted mb-2">
              <%= photo.createdAt.toLocaleDateString() %>
            </div>
            <img src="/admin/home/image/<%= photo.filename %>" width="200" />
            <div class="card-text mb-2"><%= photo.description %></div>
            <div class="card-text mb-2"><%= photo.link %></div>
            <a href="/admin/photos/<%= photo.id %>" class="btn btn-primary"
              >Read More</a
            >
            <a
              href="/admin/home/photos/edit/<%= photo.id %>"
              class="btn btn-info"
            >Edit</a>
            <form
              action="/admin/home/photos/<%=photo.id%>?_method=DELETE"
              method="POST"
              class="d-inline"
            >
              <button
                type="submit"
                class="btn btn-danger"
                id="deleteConfirm"
                onclick="return confirm('Are you sure you want to delete this post?')"
              >
                Delete
              </button>
            </form>
          </div>
        </div>

        <% }) %>
      </div>
    </div>

    <script></script>

    <script
      src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=6297e54a7a0fbb44b4a54c60"
      type="text/javascript"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>

    <script>
      function openTab(evt, idName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
          tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
          tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(idName).style.display = "block";
        evt.currentTarget.className += " active";
      }

      document.getElementById("OpenDefault").click();
    </script>
  </body>
</html>
